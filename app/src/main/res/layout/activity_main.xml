<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



            <LinearLayout
                android:layout_marginTop="32dp"
                android:id="@+id/scoreLayoutID"
                android:layout_width="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:text="@string/_0"
                    android:textSize="56sp"
                    android:id="@+id/number1ID"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:text="@string/plus"
                    android:textSize="50sp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginStart="8dp"
                    android:layout_width="wrap_content"
                    android:text="@string/_0"
                    android:textSize="56sp"
                    android:id="@+id/number2ID"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


    <EditText
        android:layout_marginTop="16dp"
        android:layout_width="100dp"
        android:maxLength="4"
        android:hint="@string/answer"
        android:gravity="center"
        android:inputType="number"
        android:id="@+id/userInputID"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreLayoutID"
        android:layout_centerHorizontal="true"
        android:importantForAutofill="no" />

    <TextView
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:layout_below="@id/submitButtonID"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:gravity="center"
        android:id="@+id/resultMessageID"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="16dp"
        android:layout_below="@id/userInputID"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:id="@+id/submitButtonID"
        android:text="@string/submit_answer"
        android:layout_height="wrap_content"/>


</RelativeLayout>